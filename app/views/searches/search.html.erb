<div class ="container">
  <!--books一覧 -->
  <table class="table table-hover">
  　<% if @range == '2' %>
    <h2>Books search for "<%= @word %>"
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @book.each do |book| %>
      <tr>
        <td>
        <%= link_to(book.user) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "50x50" %>
        <% end %>
        </td>
        <td>
          <%= link_to book.title, book_path(book) %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

    <% else %>
    <h2>Users search for "<%= @word %>"
    <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
      <% @user.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "50x50" %></td>
        <td><%= user.name%></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
    <% end %>
  </table>
